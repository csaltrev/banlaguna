section.section#transactions-section
    .container.has-text-centered
        button.button.is-primary#transfer-btn Transferir
        .modal#modal
            .modal-background
            .modal-card
                header.modal-card-head
                    p.modal-card-title.has-text-left Transferir
                    button.delete#close-btn(aria-label='close')
                section.modal-card-body
                    form(action="", method="POST")
                        .field.has-text-left
                            label.label A
                            .control
                                .select
                                    select
                                        option(value="Value1") Value1
                                        option(value="Value2") Value2
                                        option(value="Value3") Value3
                                        option(value="Value4") Value4
                                        option(value="Value5") Value5
                                        option(value="Value6") Value6
                        .field.has-text-left
                            label.label Cantidad
                            .control.has-icons-right
                                input.input(type="number", placeholder="Cantidad")
                                span.icon.is-small.is-right
                                    i.fa.fa-inr(aria-hidden="true")
                        .field.has-text-left
                            label.label Concepto
                            .control
                                textarea.textarea(placeholder="Concepto (m√°x. 50 caracteres)", rows="3", maxlength="50")
                        .field.is-grouped#form-buttons-container
                            button.button#cancel-btn(type="reset") Cancelar
                            button.button.is-success(type="submit") Aceptar        
        include user-table.pug